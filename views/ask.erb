<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Google Fonts -->
    <!-- Swap out "Roboto" for the font(s) you want to use -->
    <link href="https://fonts.googleapis.com/css?family=Roboto&display=swap" rel="stylesheet">
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.12.0/css/all.css" crossorigin="anonymous">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    
    <!-- Your own CSS -->
    <link rel="stylesheet" href="/styles.css">

    <title>News</title>
  </head>
    <body>
        <nav class="navbar navbar-dark bg-dark">
            <div class="container">
            <a class="navbar-brand navhead">Newspaper</a>
            <form class="form-inline" action="/news">
                <input class="form-control mr-sm-2" type="text" name="q" placeholder="Update Location" aria-label="Search">
                <button class="btn btn-outline-primary my-2 my-sm-0" type="submit">Submit</button>
            </form>
            </div>
        </nav>

    <!-- WEATHER -->
        <div class="container mt-5 blocks">
            <h1>Weather</h1>
            <h3 class="weatherhead">Current Conditions:</h3>  
            <div class="row">
                <div class="col-sm">
                    <div class="card"> 
                        <div class="card-body">
                            <h5>Update Location at Top of Screen for Weather</h5>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row gap">
            </div>
            <h3 class="weatherhead">7-Day Forecast:</h3>
            <div class="row">
                <div class="col-sm">
                    <div class="card"> 
                        <div class="card-body">
                            <h5>Update Location at Top of Screen for Weather</h5>
                        </div>
                    </div>
                </div>
            </div>
        </div>


        <!-- NEWS ARTICLES -->
        <div class="container mt-5 blocks">
            <h1>Top 10 News Articles</h1>
            <div class="list-group">
                <% counter=1 %>
                <% for item in @news["articles"] %>
                <% if counter > 10 %>
                    <% break %>
                <% end %>
                <a href="<%=item["url"]%>" class="list-group-item list-group-item-action">
                    <div class="d-flex w-100 justify-content-between newsitem">                
                        <img src="<%=item["urlToImage"]%>" class="newsimg">
                    </div>
                    <div class="d-flex w-100 justify-content-between">
                        <h5 class="mb-1 newsheader"><%= item["title"] %></h5>
                    </div>
                    <p class="mb-1 newsdesc"><%= item["description"] %></p>
                    <p class="minitext">Published: <%= item["publishedAt"].split("T")[0] %> </p>
                    <% counter = counter + 1 %>
                    <% end %>
                </a>
            </div>
        </div>

        <!-- Optional JavaScript -->
        <!-- jQuery first, then Popper.js, then Bootstrap JS -->
        <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
    </body>
</html>